---
import LayoutWithHero from "../layouts/LayoutWithHero.astro";
import Contacts from "../assets/img/hero.webp";
---

<LayoutWithHero title="Contact" src={Contacts} alt="Contactez-nous">
    <section class="container py-20 space-y-8">
        <div class="md:col-span-2">
            <div class="bg-white rounded-lg shadow-md p-8">
              <h2 class="text-3xl font-bold mb-8">Nous Contacter!</h2>
              <form id="contactForm" class="space-y-6">
                <div>
                  <input type="text" id="name" name="name" placeholder="Nom" class="w-full px-4 py-3 placeholder-black border-2 bg-[#FFE76A] border-[#6E4C41] rounded-lg focus:ring-[#B91C1C] focus:border-[#B91C1C]" required>
                </div>
                <div>
                  <input type="text" id="firstname" name="firstname" placeholder="PrÃ©nom" class="w-full px-4 py-3 placeholder-black border-2 bg-[#FFE76A] border-[#6E4C41] rounded-lg focus:ring-[#B91C1C] focus:border-[#B91C1C]" required>
                </div>
                <div>
                  <input type="email" id="email" name="email" placeholder="Email" class="w-full px-4 py-3 placeholder-black border-2 bg-[#FFE76A] border-[#6E4C41] rounded-lg focus:ring-[#B91C1C] focus:border-[#B91C1C]" required>
                </div>
                <div>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="6" 
                    placeholder="Message"
                    class="w-full px-4 py-3 placeholder-black border-2 bg-[#FFE76A] border-[#6E4C41] rounded-lg focus:ring-[#B91C1C] focus:border-[#B91C1C]"
                    required
                  ></textarea>
                </div>
                <div class="text-center">
                  <button type="submit" class="inline-block px-8 py-3 border-2 bg-[#FFE76A] border-[#6E4C41] text-black rounded-xl transition-colors">
                    Envoyer
                  </button>
                </div>
              </form>
            </div>
    </section>
</LayoutWithHero>